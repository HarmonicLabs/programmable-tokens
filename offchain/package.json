{
  "name": "offchain",
  "version": "1.0.0",
  "description": "programmable tokens offchain",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rm -rf ./dist && tsc -p ./tsconfig.json",
    "build:light": "tsc -p ./tsconfig.json",
    "start": "npm run build && node dist/index.js",
    "tx:genKeys": "npm run build:light && node dist/genKeys.js",
    "make:validators": "npm run build && node dist/scripts.js",
    "mint:testTokens": "npm run build && node dist/mintTestSupply.js",
    "lucid:genCredentials": "npm run build && node dist/Lucid/generateCredentials.js",
    "lucid:validators": "npm run build && node dist/Lucid/scripts.js",
    "lucid:mintGlobal": "npm run build && node dist/Lucid/mintGlobal.js",
    "lucid:mintRegistry": "npm run build && node dist/Lucid/mintRegistry.js",
    "lucid:mintATokens": "npm run build && node dist/Lucid/mintATokens.js",
    "lucid:mintOwnerState": "npm run build && node dist/Lucid/mintOwnerState.js",
    "lucid:mintUser1State": "npm run build && node dist/Lucid/mintUser1State.js",
    "lucid:mintUser2State": "npm run build && node dist/Lucid/mintUser2State.js",
    "lucid:sendToUser1": "npm run build && node dist/Lucid/sendToUser1.js",
    "lucid:sendUser1to2": "npm run build && node dist/Lucid/sendUser1to2.js",
    "lucid:mintInsertRegistry": "npm run build && node dist/Lucid/mintInsertRegistry.js",
    "bench:registry": "npm run build && node dist/Pluts/benchmark.js"
  },
  "author": "Rhys Morgan",
  "license": "ISC",
  "devDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@harmoniclabs/blockfrost-pluts": "^0.1.16",
    "@harmoniclabs/buildooor": "^0.1.0",
    "@harmoniclabs/plu-ts": "^0.9.0",
    "@meshsdk/core": "^1.8.13"
  }
}
